{
  "extends": "@repo/typescript-config/base.json",
  "compilerOptions": {
    "composite": true,
    "rootDir": "src",
    "tsBuildInfoFile": "dist/.tsbuildinfo",
    "outDir": "dist",
    "declaration": true,
    "emitDeclarationOnly": false,
    "module": "ESNext",
    "target": "ESNext",
    "moduleResolution": "Bundler"
  },
  "include": ["src"],
  "exclude": ["dist", "node_modules"]
}
